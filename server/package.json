{
  "name": "candilib",
  "version": "2.0.0-alpha.0",
  "description": "Réserver sa place d'examen pratique du permis de conduire",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run test",
    "build": "babel src -d dist",
    "db": "docker-compose -f docker-compose.dev.db.yml up -d",
    "db:down": "docker-compose -f docker-compose.dev.db.yml down",
    "build:all": "docker-compose -f docker-compose.prod.all.yml build",
    "dev-setup": "node dev-setup/index.js",
    "dev": "nodemon --inspect --watch src boot-dev.js",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "lint:all": "run-p lint:client lint --",
    "lint:client": "cd .. ; cd client ; npm run lint",
    "lint:only": "eslint src",
    "prelint": "npm run format",
    "lint": "eslint src",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "pretest": "npm run lint",
    "test:all": "run-s test test:client",
    "test:client": "cd .. ; cd client ; npm test",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit"
  },
  "keywords": [
    "Candidat",
    "libre",
    "examen",
    "pratique",
    "permis",
    "conduire"
  ],
  "author": "Ministère de l'intérieur",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^5.2.0",
    "delay": "^4.1.0",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.1-alpha.1",
    "fast-csv": "^2.4.1",
    "json2csv": "^4.3.3",
    "jsonwebtoken": "^8.4.0",
    "latinize": "^0.4.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.8",
    "morgan": "^1.9.1",
    "nodemailer": "^5.1.1",
    "nodemailer-html-to-text": "^3.0.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "sanitize-html": "^1.20.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.1",
    "mongodb-memory-server": "^2.9.3",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^4.7.1",
    "regenerator-runtime": "^0.13.1",
    "supertest": "^3.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:all"
    }
  },
  "lint-staged": {
    "*.{js,vue,htm,html,css,sss,less,scss}": [
      "npm run lint:all",
      "git add"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:import/errors",
      "plugin:import/warnings",
      "standard"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "amd": true
        }
      ],
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  }
}
